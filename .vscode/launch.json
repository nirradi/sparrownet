    "version": "0.2.0",
    "configurations": [
        {
            "name": "Game Loop",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/game/loop.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "Mutator Benchmark",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/bench_mutator.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "args": ["--intent", "set_clock", "--runs", "10", "--dump", "bench_results.json"]
        }
    ]
}